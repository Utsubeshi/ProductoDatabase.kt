<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_blue_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/azul</item>
    </style>

    <style name="text_gray_18sp">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="Widget.Theme.LaHielera.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.LaHielera.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_gray</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>
</resources>